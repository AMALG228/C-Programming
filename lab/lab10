#include <stdio.h>
#include <stdlib.h>


typedef struct {
    int day;
    int month;
    int year;
} Date;


Date createDate(int day, int month, int year) {
    Date d;
    d.day = day;
    d.month = month;
    d.year = year;
    return d;
}


void printDecade(Date d) {
    if (d.day <= 10)
        printf("1-я декада\n");
    else if (d.day <= 20)
        printf("2-я декада\n");
    else
        printf("3-я декада\n");
}



void printSeason(Date d) {
    if (d.month >= 3 && d.month <= 5)
        printf("Весна\n");
    else if (d.month >= 6 && d.month <= 8)
        printf("Лето\n");
    else if (d.month >= 9 && d.month <= 11)
        printf("Осень\n");
    else
        printf("Зима\n");
}



void printVek(Date d) {
    int vek = (d.year - 1) / 100 + 1;
    printf("%d-й век\n", vek);
}



int main() {
    int N;
    printf("Введите количество человек: ");
    scanf("%d", &N);

    Date* dates = malloc(N * sizeof(Date));
    Date dates[10];\

    for (int i = 0; i < N; i++) {
        int day, month, year;
        printf("Введите дату рождения (день месяц год) для человека %d: ", i + 1);
        scanf("%d %d %d", &day, &month, &year);
        dates[i] = createDate(day, month, year);
    }

    for (int i = 0; i < N; i++) {
        printf("\nЧеловек %d:\n", i + 1);
        printf("Декада: ");
        printDecade(dates[i]);
        printf("Сезон: ");
        printSeason(dates[i]);
        printf("Век: ");
        printVek(dates[i]);
    }

    free(dates);
    return 0;
}